{
  "name": "install-actionlint",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@types/bun": "latest",
    "eslint": "^9.30.1",
    "jiti": "^2.4.2",
    "typescript-eslint": "^8.36.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "build": "bun install && bun build src/index.ts --outdir=dist --target=node --entry-naming '[name].mjs'",
    "lint": "eslint . \"**/*.ts\"",
    "prepare": "git config core.hooksPath .githooks"
  }
}
