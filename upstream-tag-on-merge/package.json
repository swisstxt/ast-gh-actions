{
  "name": "upstream-tag-on-merge",
  "version": "1.0.0",
  "main": "dist/index.mjs",
  "type": "module",
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^20.0.0",
    "@octokit/webhooks-types": "^7.6.1",
    "@types/node": "^20.0.0",
    "@types/semver": "^7.5.8",
    "@eslint/js": "^9.17.0",
    "@tsconfig/bun": "^1.0.7",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^9.17.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  },
  "description": "GitHub Action to update tag on merge",
  "todos": {
    "build": "FIXME: Need to improve build script to handle source maps"
  },
  "scripts": {
    "build": "bun install && bun build src/index.ts --outdir=dist --target=node --entry-naming '[name].mjs'",
    "lint": "eslint . \"**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint:staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "prepare": "git config core.hooksPath .githook"
  }
}
